<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>jox</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Style -->
    <link href="css/bootstrap.css" rel="stylesheet">
    <link href="css/bootstrap-responsive.css" rel="stylesheet">
    <link href="css/docs.css" rel="stylesheet">
  </head>

  <body>

    <header class="jumbotron subhead" id="overview">
      <div class="container">
        <h1>jox</h1>
        <p class="lead">JavaScript documentation generator</p>
      </div>
    </header>

    <% 
    // Filter
    var functions = getCommentsByTag(comments,{ type: "function" });
    %>

    <div class="container">

        <div class="row">
            <div class="span3">
                <h3>Contents</h3>
                <ul class="nav nav-list"><%
                    for(var i=0; i<functions.length; i++){
                        var c = functions[i];
                        %><li><a href="#<%=c.ctx.name%>"><i class="icon-chevron-right"></i> <%=c.ctx.name%></a></li><%
                    }
                %></ul>
            </div>
            <div class="span9">
                <section id="functions">
                    <% // Print functions
                    for(var i=0; i<functions.length; i++){
                        var f = functions[i];
                        var paramTags = filterTags(f.tags,{ type : "param" });

                        var paramNames = [];
                        for(var j=0; j<paramTags.length; j++){
                            paramNames.push(paramTags[j].name);
                        }

                        %><h2 id="<%=f.ctx.name%>"><%=f.ctx.name%>(<%=paramNames.join(", ")%>)</h2><%
                        %><%-f.description.full%><%

                        if(paramTags.length){
                            %><dl><%
                            for(var j=0; j<paramTags.length; j++){
                                var p = paramTags[j];
                                %><dt><i><%=p.types[0]%></i> <%=p.name%></dt><dd><%-p.description%></dd><%
                            }
                            %></dl><%
                        }

                        %><hr/><%
                    } %>
                </section>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
      <div class="container">
        <p>Documentation generated by jox</p>
        <ul class="footer-links">
          <li><a href="http://github.com/schteppe/jox">Github</a></li>
          <li class="muted">&middot;</li>
          <li><a href="http://twitter.com/schteppe">@schteppe</a></li>
        </ul>
      </div>
    </footer>

    <!-- JavaScript -->
    <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script src="js/bootstrap.js"></script>

  </body>
</html>
