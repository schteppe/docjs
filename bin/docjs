#!/usr/bin/env node

var ejs = require('ejs'),
    fs = require('fs'),
    docjs = require('../index.js'),
    dox = require("dox"),
    path = require("path"),
    wrench = require("wrench"),
    docjsrc = JSON.parse(fs.readFileSync('.docjs'));

var templatePath = path.normalize(docjsrc.template),
    source = docjsrc.source,
    dest = path.normalize(docjsrc.destination);

docjs.run(source,dest,templatePath);
